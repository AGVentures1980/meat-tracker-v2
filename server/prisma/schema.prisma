generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id         String   @id @default(uuid())
  name       String
  plan       String   @default("enterprise")
  created_at DateTime @default(now())
  stores     Store[]
}

model Store {
  id                Int               @id @default(autoincrement())
  company_id        String
  store_name        String
  location          String
  created_at        DateTime          @default(now())
  target_cost_guest Float             @default(9.94)
  target_lbs_guest  Float             @default(1.76)
  inventory_records InventoryRecord[]
  meat_usage        MeatUsage[]
  orders            Order[]
  prep_logs         PrepLog[]
  purchase_records  PurchaseRecord[]
  reports           Report[]
  company           Company           @relation(fields: [company_id], references: [id])
  meat_targets      StoreMeatTarget[]
  uploads           Upload[]
  users             User[]
  waste_compliance  WasteCompliance[]
  delivery_sales    DeliverySale[]
  invoices          InvoiceRecord[]
  waste_logs        WasteLog[]
  product_aliases   ProductAlias[]

  @@unique([company_id, store_name])
}

model StoreMeatTarget {
  id          String @id @default(uuid())
  store_id    Int
  protein     String
  target      Float
  cost_target Float?
  store       Store  @relation(fields: [store_id], references: [id])

  @@unique([store_id, protein])
}

model User {
  id                   String    @id @default(uuid())
  store_id             Int?
  email                String    @unique
  password_hash        String
  role                 Role      @default(viewer)
  created_at           DateTime  @default(now())
  force_change         Boolean   @default(false)
  last_password_change DateTime  @default(now())
  is_trial             Boolean   @default(false)
  trial_expires_at     DateTime?
  store                Store?    @relation(fields: [store_id], references: [id])
}

model Order {
  id                String      @id @default(uuid())
  store_id          Int
  order_external_id String?
  source            OrderSource
  order_date        DateTime
  raw_payload       Json?
  store             Store       @relation(fields: [store_id], references: [id])
  items             OrderItem[]

  @@index([store_id, order_date])
}

model OrderItem {
  id           String @id @default(uuid())
  order_id     String
  item_name    String
  protein_type String
  lbs          Float
  order        Order  @relation(fields: [order_id], references: [id])
}

model MeatUsage {
  id        String   @id @default(uuid())
  store_id  Int
  protein   String
  lbs_total Float
  date      DateTime @db.Date
  store     Store    @relation(fields: [store_id], references: [id])

  @@unique([store_id, protein, date])
}

model Upload {
  id         String   @id @default(uuid())
  store_id   Int
  file_type  FileType
  file_url   String
  processed  Boolean  @default(false)
  created_at DateTime @default(now())
  store      Store    @relation(fields: [store_id], references: [id])
}

model Report {
  id              String   @id @default(uuid())
  store_id        Int
  month           String
  total_lbs       Float
  extra_customers Int      @default(0)
  generated_at    DateTime @default(now())
  delivery_guests Int      @default(0)
  dine_in_guests  Int      @default(0)
  store           Store    @relation(fields: [store_id], references: [id])

  @@unique([store_id, month])
}

model InventoryRecord {
  id        String   @id @default(uuid())
  store_id  Int
  date      DateTime @db.Date
  item_name String
  quantity  Float
  store     Store    @relation(fields: [store_id], references: [id])

  @@index([store_id, date])
}

model PurchaseRecord {
  id         String   @id @default(uuid())
  store_id   Int
  date       DateTime @db.Date
  item_name  String
  quantity   Float
  cost_total Float
  store      Store    @relation(fields: [store_id], references: [id])

  @@index([store_id, date])
}

model InvoiceRecord {
  id             String   @id @default(uuid())
  store_id       Int
  date           DateTime @default(now())
  invoice_number String?
  item_name      String
  quantity       Float
  price_per_lb   Float
  cost_total     Float
  source         String   @default("Manual") // Manual or OCR
  store          Store    @relation(fields: [store_id], references: [id])

  @@index([store_id, date])
}

model SystemSettings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  type      String
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id               String   @id @default(uuid())
  user_id          String?
  action           String
  resource         String
  details          Json?
  created_at       DateTime @default(now())
  location         String
  target_lbs_guest Float    @default(1.76)
}

model WasteLog {
  id         String   @id @default(uuid())
  store_id   Int
  date       DateTime @db.Date
  shift      String
  input_by   String
  user_id    String
  items      Json
  created_at DateTime @default(now())
  store      Store    @relation(fields: [store_id], references: [id])

  @@unique([store_id, date, shift])
}

model WasteCompliance {
  id           String   @id @default(uuid())
  store_id     Int
  week_start   DateTime @db.Date
  lunch_count  Int      @default(0)
  dinner_count Int      @default(0)
  is_locked    Boolean  @default(false)
  unlocked_by  String?
  store        Store    @relation(fields: [store_id], references: [id])

  @@unique([store_id, week_start])
}

model PrepLog {
  id         String   @id @default(uuid())
  store_id   Int
  date       DateTime @db.Date
  forecast   Int
  data       Json
  user_id    String
  created_at DateTime @default(now())
  store      Store    @relation(fields: [store_id], references: [id])

  @@unique([store_id, date])
}

model DeliverySale {
  id                String   @id @default(uuid())
  store_id          Int
  date              DateTime @default(now())
  source            OrderSource
  order_external_id String?
  total_lbs         Float
  guests            Int
  protein_breakdown Json
  created_at        DateTime @default(now())
  store             Store    @relation(fields: [store_id], references: [id])

  @@index([store_id, date])
}

enum Role {
  admin
  manager
  viewer
  director
}

enum OrderSource {
  OLO
  UberEats
  DoorDash
  Manual
  OCR
}

enum FileType {
  CSV
  Image
}

model ProductAlias {
  id         String   @id @default(uuid())
  store_id   Int
  alias      String
  protein    String
  confidence Float    @default(1.0)
  created_at DateTime @default(now())
  store      Store    @relation(fields: [store_id], references: [id])

  @@unique([store_id, alias])
}
