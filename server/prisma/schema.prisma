generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id         String   @id @default(uuid())
  name       String
  plan       String   @default("enterprise")
  created_at DateTime @default(now())
  stores     Store[]
}

model Store {
  id                Int               @id @default(autoincrement())
  company_id        String
  store_name        String
  location          String
  target_lbs_guest  Float             @default(1.76)
  created_at        DateTime          @default(now())
  inventory_records InventoryRecord[]
  meat_usage        MeatUsage[]
  orders            Order[]
  purchase_records  PurchaseRecord[]
  reports           Report[]
  company           Company           @relation(fields: [company_id], references: [id])
  uploads           Upload[]
  users             User[]
}

model User {
  id                   String   @id @default(uuid())
  store_id             Int?
  email                String   @unique
  password_hash        String
  role                 Role     @default(viewer)
  created_at           DateTime @default(now())
  force_change         Boolean  @default(false)
  last_password_change DateTime @default(now())
  store                Store?   @relation(fields: [store_id], references: [id])
}

model Order {
  id                String      @id @default(uuid())
  store_id          Int
  order_external_id String?
  source            OrderSource
  order_date        DateTime
  raw_payload       Json?
  store             Store       @relation(fields: [store_id], references: [id])
  items             OrderItem[]

  @@index([store_id, order_date])
}

model OrderItem {
  id           String @id @default(uuid())
  order_id     String
  item_name    String
  protein_type String
  lbs          Float
  order        Order  @relation(fields: [order_id], references: [id])
}

model MeatUsage {
  id        String   @id @default(uuid())
  store_id  Int
  protein   String
  lbs_total Float
  date      DateTime @db.Date
  store     Store    @relation(fields: [store_id], references: [id])

  @@unique([store_id, protein, date])
}

model Upload {
  id         String   @id @default(uuid())
  store_id   Int
  file_type  FileType
  file_url   String
  processed  Boolean  @default(false)
  created_at DateTime @default(now())
  store      Store    @relation(fields: [store_id], references: [id])
}

model Report {
  id              String   @id @default(uuid())
  store_id        Int
  month           String
  total_lbs       Float
  extra_customers Int      @default(0)
  generated_at    DateTime @default(now())
  delivery_guests Int      @default(0)
  dine_in_guests  Int      @default(0)
  store           Store    @relation(fields: [store_id], references: [id])

  @@unique([store_id, month])
}

model InventoryRecord {
  id        String   @id @default(uuid())
  store_id  Int
  date      DateTime @db.Date
  item_name String
  quantity  Float
  store     Store    @relation(fields: [store_id], references: [id])

  @@index([store_id, date])
}

model PurchaseRecord {
  id         String   @id @default(uuid())
  store_id   Int
  date       DateTime @db.Date
  item_name  String
  quantity   Float
  cost_total Float
  store      Store    @relation(fields: [store_id], references: [id])

  @@index([store_id, date])
}

enum Role {
  admin
  director
  manager
  viewer
}

enum OrderSource {
  OLO
  UberEats
  DoorDash
  Manual
}

enum FileType {
  CSV
  Image
}
